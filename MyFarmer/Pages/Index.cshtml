@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@* ================== CAROUSEL ================== *@

<div class="container">
    @if (Model.Message != null)
    {
        <div>
            <div class="alert alert-success">
                @Model.Message
            </div>
        </div>
