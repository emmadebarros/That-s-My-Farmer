@page "{id:min(1)}"
@model MyFarmer.Pages.Admin.DeleteFoodModel
@{
    ViewData["Title"] = "Delete Food";
}
<div>
    <h1>@ViewData["Title"]</h1>
    <p>Food Id: @Model.Id </p>
    <p>Food Name: @Model.Description</p>
    <br>
    <h5>Are you sure you want to delete this record?</h5>
    <br>
    <a asp-page="/Admin/Food" class="btn btn-info btn-lg mr-4">Cancel</a>
    <br><br>
    <form  asp-page-handler="DeleteFood">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger btn-lg" />
    </form>

</div>
