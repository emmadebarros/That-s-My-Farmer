@page "{id:min(1)}"
@model MyFarmer.Pages.Admin.DeleteFarmModel
@{
    ViewData["Title"] = "Delete Farm";
}
<div>
    <h1>@ViewData["Title"]</h1>
    <p>Farm Id: @Model.Id </p>
    <p>Farm Name: @Model.Name</p>
    <br>
    <h5>Are you sure you want to delete this record?</h5>
    <br>
    <a asp-page="/Admin/Farms" class="btn btn-info btn-lg mr-4">Cancel</a>
    <br><br>
    <form  asp-page-handler="DeleteFarm">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger btn-lg" />
    </form>

</div>