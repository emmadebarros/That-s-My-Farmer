@page "{id}"
@model MyFarmer.Pages.Admin.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<div>
    <h1>@ViewData["Title"]</h1>
    <p>Id: @Model.Id</p>
    <p>Name: @Model.Email</p>
    <p>Email: @Model.Email</p>
    <br>
    <h5>Are you sure you want to delete this record?</h5>
    <br>
    <a asp-page="/Admin/Users" class="btn btn-info btn-lg mr-4">Cancel</a>
    <br><br>
    <form  asp-page-handler="DeleteUser">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger btn-lg" />
    </form>

</div>