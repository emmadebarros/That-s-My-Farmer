@page "{id:min(1)}/{name}/{description}"
@model MyFarmer.Pages.Admin.DeleteFarmServiceModel
@{
    ViewData["Title"] = "Delete Farm Service";
}
<div>
    <h1>@ViewData["Title"]</h1>
    <p>Farm Service Id: @Model.Id </p>
    <p>Farm Name: @Model.Name</p>
    <p>Service Name: @Model.Description</p>
    <br>
    <h5>Are you sure you want to delete this record?</h5>
    <br>
    <a asp-page="/Admin/FarmService" class="btn btn-info btn-lg mr-4">Cancel</a>
    <br><br>
    <form  asp-page-handler="DeleteFarmService">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger btn-lg" />
    </form>

</div>