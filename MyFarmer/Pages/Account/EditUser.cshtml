@page "{id}"
@model MyFarmer.Pages.Account.EditUserModel
@{
    ViewData["Title"] = "EditUser";
}

<div class="container">
    <div class="text-center">
        <h1 class="text-warning profile-header">Edit My Info:</h1>
    </div>

    <div class="container d-flex justify-content-center mt-5" style="margin-bottom: 10rem !important;">
        <div class="card w-75">
            <div class="card-body">

                <form method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Input.UserId">
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="form-control" readonly />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary btn-md mr-4">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
