@page
@model MyFarmer.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
    <div class="col-md-6 offset-3">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Input.RegisterMeAsFarmer" class="form-check-input" id="isFarmerLoginTypeChecked"/>
                <label asp-for="Input.RegisterMeAsFarmer" class="form-check-label">
                    Register me as a farmer
                </label>
            </div>
            <div id="farmerRegistratioConfirmation" style="display:none">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="farmLoginConfirmation">
                    <label class="form-check-label" for="farmLoginConfirmation">
                        <span class="text-danger">Are you sure you want to register farm login? It may restricts your permissions.</span>
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" id="registerSaveBtn">Register</button>
        </form>
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}