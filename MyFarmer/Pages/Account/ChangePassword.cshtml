@page "{id}"
@model MyFarmer.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="text-center">
        <h1 class="text-warning profile-header">Change My Password</h1>
    </div>

    <div class="container d-flex justify-content-center mt-5" style="margin-bottom: 10rem !important;">
        <div class="card w-75">
            <div class="card-body">

                <form method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @* <input type="hidden" asp-for="Input.postId" readonly> *@

                    <div class="form-group">
                        <label asp-for="Input.CurrentPassword"></label>
                        <input type="password" asp-for="Input.CurrentPassword" class="form-control" />
                        <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input type="password" asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPasswordConfirm"></label>
                        <input type="password" asp-for="Input.NewPasswordConfirm" class="form-control" />
                        <span asp-validation-for="Input.NewPasswordConfirm" class="text-danger"></span>
                    </div>

                    <div class="btn-group">
                        <a asp-page="/Account/UserProfile" class="btn btn-md btn-primary mr-4" role="button">Cancel</a>
                        <button type="submit" class="btn btn-primary btn-md mr-4">Update Password</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
